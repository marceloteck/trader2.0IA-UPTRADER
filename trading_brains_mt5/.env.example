# ENABLE_LIVE_TRADING must be true AND LIVE_CONFIRM_KEY must match to allow real trading
ENABLE_LIVE_TRADING=false
LIVE_CONFIRM_KEY=CHANGE_ME
SYMBOL=WIN$N
TIMEFRAMES=M1,M5,H1
SPREAD_MAX=2.0
SLIPPAGE=1.0
RISK_PER_TRADE=0.005
POINT_VALUE=1.0
MIN_LOT=1.0
LOT_STEP=1.0
DAILY_LOSS_LIMIT=200.0
MAX_TRADES_PER_DAY=5
MAX_CONSEC_LOSSES=3
DB_PATH=./data/db/trading.db
LOG_PATH=./data/logs/app.log
BROKER_TZ=America/Sao_Paulo
TRAIN_WINDOW_DAYS=30
TEST_WINDOW_DAYS=10
LABEL_HORIZON_CANDLES=30
ROUND_LEVEL_STEP=50
SESSION_START=09:00
SESSION_END=17:00
ENABLE_DASHBOARD_CONTROL=false
# ============================================
# V4 - Execution Engine Configuration
# ============================================

# Execution mode: SIM (paper) or REAL (live)
# REAL requires LIVE_OK.txt in ./data/ directory
LIVE_MODE=SIM
REQUIRE_LIVE_OK_FILE=true
LIVE_OK_FILENAME=LIVE_OK.txt

# Fallback behavior if MT5 connection fails
# PAUSE = stop trading, SIM = fall back to simulator
FALLBACK_ON_MT5_ERROR=PAUSE

# Risk circuit breakers
DAILY_PROFIT_TARGET=0
MAX_TRADES_PER_HOUR=2
COOLDOWN_SECONDS=180

# Automatic position size degradation
DEGRADE_STEPS=3
DEGRADE_FACTOR=0.5

# SL/TP management
BREAK_EVEN_AFTER_TP1=true
TRAILING_ENABLED=false
TRAILING_ATR_MULT=1.5
USE_PARTIAL_EXITS=false

# Fill model (realistic slippage/spread simulation)
FILL_MODEL_SPREAD_BASE=1.0
FILL_MODEL_SPREAD_VOL_MULT=0.5
FILL_MODEL_SLIPPAGE_BASE=0.0
FILL_MODEL_SLIPPAGE_MAX=2.0

# MT5 robustness
MT5_RECONNECT_MAX_SECONDS=60
STALE_DATA_MINUTES=3